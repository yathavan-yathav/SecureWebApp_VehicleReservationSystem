<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Secure Web App</display-name>

  <filter>
    <filter-name>AuthFilter</filter-name>
    <filter-class>com.securewebapp.app.filter.AuthFilter</filter-class>
  </filter>
  <filter>
    <filter-name>CSPFilter</filter-name>
    <filter-class>com.securewebapp.app.filter.CSPFilter</filter-class>
  </filter>
  <filter>
    <filter-name>RefererFilter</filter-name>
    <filter-class>com.securewebapp.app.filter.RefererFilter</filter-class>
  </filter>

  <filter-mapping>
    <filter-name>RefererFilter</filter-name>
    <url-pattern>/reservation/*</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>RefererFilter</filter-name>
    <url-pattern>/profile</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>RefererFilter</filter-name>
    <url-pattern>/logout</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>CSPFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>AuthFilter</filter-name>
    <url-pattern>/reservation/*</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>AuthFilter</filter-name>
    <url-pattern>/profile</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>AuthFilter</filter-name>
    <url-pattern>/logout</url-pattern>
  </filter-mapping>

  <servlet>
    <servlet-name>CallbackServlet</servlet-name>
    <servlet-class>com.securewebapp.app.servlet.CallbackServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>com.securewebapp.app.servlet.LoginServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>LogoutServlet</servlet-name>
    <servlet-class>com.securewebapp.app.servlet.LogoutServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ProfileServlet</servlet-name>
    <servlet-class>com.securewebapp.app.servlet.ProfileServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ReservationServlet</servlet-name>
    <servlet-class>com.securewebapp.app.servlet.ReservationServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ReservationAddServlet</servlet-name>
    <servlet-class>com.securewebapp.app.servlet.ReservationAddServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ReservationViewServlet</servlet-name>
    <servlet-class>com.securewebapp.app.servlet.ReservationViewServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ReservationDeleteServlet</servlet-name>
    <servlet-class>com.securewebapp.app.servlet.ReservationDeleteServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>LogoutServlet</servlet-name>
    <url-pattern>/logout</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>CallbackServlet</servlet-name>
    <url-pattern>/callback</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ProfileServlet</servlet-name>
    <url-pattern>/profile</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ReservationServlet</servlet-name>
    <url-pattern>/reservation</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ReservationAddServlet</servlet-name>
    <url-pattern>/reservation/add</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ReservationViewServlet</servlet-name>
    <url-pattern>/reservation/view</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ReservationDeleteServlet</servlet-name>
    <url-pattern>/reservation/delete</url-pattern>
  </servlet-mapping>
</web-app>
